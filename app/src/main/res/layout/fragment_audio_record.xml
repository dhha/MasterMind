<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.AudioRecordFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal">

<!--        <ImageButton-->
<!--            android:layout_width="100dp"-->
<!--            android:layout_height="100dp"-->
<!--            android:src="@drawable/icon_audio"-->
<!--            android:backgroundTint="@color/fab_record_red"/>-->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/dialog_record_audio_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="@color/fab_record_red"
            android:src="@drawable/icon_audio" />
        <TextView
            android:id="@+id/dialog_record_audio_tap_to_start_recording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/gray_800"
            android:textSize="14sp"
            android:text="@string/dialog_record_audio_tap_to_record"/>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:gravity="center">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:id="@+id/dialog_record_audio_rec_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/icon_record"
                    android:tint="@color/fab_record_red"
                    android:visibility="invisible"
                    android:layout_weight="0.2"/>
                <ImageView
                    android:id="@+id/dialog_record_audio_play_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="13dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/icon_play"
                    android:tint="@color/gray_800"
                    android:visibility="invisible"
                    android:layout_weight="0.2"/>
                <ImageView
                    android:id="@+id/dialog_record_audio_done_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="13dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/icon_check"
                    android:tint="@color/fab_accept_green"
                    android:visibility="invisible"
                    android:layout_weight="0.2"/>
            </LinearLayout>


            <TextView
                android:id="@+id/dialog_record_audio_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="2dp"
                android:textColor="@color/gray_700"
                android:textSize="34sp"
                android:text="00:00:00"
                android:visibility="invisible"/>
        </LinearLayout>

            />
    </LinearLayout>

</FrameLayout>